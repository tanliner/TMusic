<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

    <FrameLayout
            android:id="@+id/fl_cd_singer_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <com.ltan.music.widget.CircleImageView
                android:id="@+id/crliv_black_bg"
                android:layout_width="@dimen/player_service_cd_bg_height"
                android:layout_height="@dimen/player_service_cd_bg_height"
                android:layout_gravity="center"
                android:src="@drawable/cd_player" />

        <com.ltan.music.widget.CircleImageView
                android:id="@+id/crliv_song_alb"
                android:layout_width="@dimen/player_service_cd_height"
                android:layout_height="@dimen/player_service_cd_height"
                android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>