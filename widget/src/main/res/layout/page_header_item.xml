<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingStart="@dimen/pager_header_item_padding_h"
              android:paddingEnd="@dimen/pager_header_item_padding_h"
              android:gravity="center"
              android:showDividers="middle"
              android:divider="@drawable/page_header_divider"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_page_header_item"
            android:layout_marginTop="@dimen/pager_header_item_margin_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/tv_page_header_item"
            android:layout_marginBottom="@dimen/pager_header_item_margin_v"
            android:textSize="@dimen/pager_header_item_title_size"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>