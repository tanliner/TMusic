<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_song_list_item_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name" />

    <TextView
            android:id="@+id/tv_song_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/song_list_item_shortcut_txt_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/song_list_item_name_left_margin"
            android:layout_toEndOf="@id/iv_song_list_item_preview" />

    <TextView
            android:id="@+id/tv_song_list_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="@string/collector_item_count"
            android:textColor="@color/color_song_list_item_count"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_song_list_item_name"
            android:layout_marginStart="@dimen/song_list_item_name_left_margin" />
    <ImageView
            android:id="@+id/iv_song_list_item_menu"
            android:layout_width="@dimen/song_list_item_shortcut_w"
            android:layout_height="@dimen/song_list_item_shortcut_h"
            android:src="@drawable/song_list_item_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name" />
    <ImageView
            android:id="@+id/iv_song_list_item_create"
            android:layout_width="@dimen/song_list_item_shortcut_w"
            android:layout_height="@dimen/song_list_item_shortcut_h"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/song_list_item_create"
            android:layout_toStartOf="@id/iv_song_list_item_menu"
            android:contentDescription="@string/app_name" />
</merge>