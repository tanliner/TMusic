<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:orientation="vertical"
       android:paddingTop="@dimen/song_list_item_name_padding_v"
       android:paddingBottom="@dimen/song_list_item_name_padding_v"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_song_list_item_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/song_list_item_left_padding"
            android:paddingEnd="0dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name" />

    <TextView
            android:id="@+id/tv_song_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/song_list_item_name_left_margin"
            android:layout_toEndOf="@id/iv_song_list_item_preview" />

    <TextView
            android:id="@+id/tv_song_list_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="@string/collector_item_count"
            android:textColor="@color/color_song_list_item_count"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_song_list_item_name"
            android:layout_marginStart="@dimen/song_list_item_name_left_margin" />
</RelativeLayout>