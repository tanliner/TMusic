<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SongItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/song_item_number_size</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="SongItem.Title">
        <item name="android:textSize">@dimen/song_item_title_size</item>
        <item name="android:textColor">@color/color_list_item_title</item>
    </style>
    <style name="SongItem.SubTitle">
        <item name="android:textSize">@dimen/song_item_subtitle_size</item>
        <item name="android:textColor">@color/color_list_item_subtitle</item>
    </style>
    <style name="SongItem.Video">
        <item name="android:layout_width">@dimen/list_item_menu_w</item>
        <item name="android:layout_height">@dimen/list_item_menu_h</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SongItem.Menu">
        <item name="android:layout_width">@dimen/list_item_menu_w</item>
        <item name="android:layout_height">@dimen/list_item_menu_h</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MediaPlayerControllerIcon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/bottom_media_control_height</item>
        <item name="android:layout_height">@dimen/bottom_media_control_height</item>
    </style>

    <style name="PlayerServiceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_player_service_title</item>
        <item name="android:textSize">@dimen/player_service_title</item>
    </style>
    <style name="PlayerServiceTitle.Subtitle">
        <item name="android:textColor">@color/color_player_service_subtitle</item>
        <item name="android:textSize">@dimen/player_service_subtitle</item>
    </style>

    <style name="PlayerPageController" />
    <style name="PlayerPageController.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="PlayerPageController.Button.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
